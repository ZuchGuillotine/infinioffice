{
  "name": "infinioffice",
  "version": "1.0.0",
  "main": "index.js",
  "scripts": {
    "start": "npm run migrate:deploy && NODE_ENV=production node src/index.js",
    "migrate:deploy": "npx prisma migrate deploy",
    "dev": "./scripts/dev.sh",
    "dev:backend": "NODE_ENV=development PORT=3001 node src/index.js",
    "dev:frontend": "cd frontend && npm run dev",
    "dev:ngrok": "ngrok http 3001",
    "build": "./scripts/build.sh",
    "build:frontend": "cd frontend && npm run build",
    "seed:test-user": "node scripts/seed-test-user.js",
    "build:docker": "docker build -t infinioffice .",
    "postinstall": "cd frontend && npm install",
    "test": "jest",
    "test:watch": "jest --watch",
    "test:coverage": "jest --coverage",
    "test:unit": "jest tests/unit",
    "test:integration": "jest tests/integration",
    "test:e2e": "jest tests/e2e",
    "test:performance": "jest tests/performance",
    "test:ci": "jest --ci --coverage --watchAll=false"
  },
  "keywords": [],
  "author": "",
  "license": "ISC",
  "description": "",
  "dependencies": {
    "@deepgram/sdk": "^4.11.2",
    "@fastify/cors": "^11.1.0",
    "@fastify/static": "^7.0.1",
    "@fastify/websocket": "^11.2.0",
    "@langchain/core": "^0.3.66",
    "@opentelemetry/api": "^1.9.0",
    "@opentelemetry/auto-instrumentations-node": "^0.62.0",
    "@opentelemetry/exporter-trace-otlp-http": "^0.203.0",
    "@opentelemetry/sdk-node": "^0.203.0",
    "@prisma/client": "^6.13.0",
    "@twilio/voice-sdk": "^2.15.0",
    "axios": "^1.11.0",
    "cors": "^2.8.5",
    "fastify": "^5.4.0",
    "google-auth-library": "^9.15.1",
    "googleapis": "^155.0.1",
    "helmet": "^8.1.0",
    "ioredis": "^5.7.0",
    "jsonwebtoken": "^9.0.2",
    "morgan": "^1.10.1",
    "openai": "^5.12.0",
    "pg": "^8.16.3",
    "prisma": "^6.13.0",
    "twilio": "^5.8.0",
    "winston": "^3.17.0",
    "ws": "^8.18.3",
    "xstate": "^5.20.1",
    "zod": "^3.25.76"
  },
  "devDependencies": {
    "@types/jest": "^29.5.12",
    "jest": "^30.0.5",
    "jest-environment-node": "^30.0.5",
    "nock": "^13.5.0",
    "sinon": "^17.0.1",
    "supertest": "^7.1.4",
    "ws": "^8.18.3"
  },
  "jest": {
    "testEnvironment": "node",
    "collectCoverageFrom": [
      "src/**/*.js",
      "!src/index.js",
      "!src/verify_twilio.js",
      "!**/node_modules/**"
    ],
    "coverageThreshold": {
      "global": {
        "branches": 80,
        "functions": 80,
        "lines": 80,
        "statements": 80
      }
    },
    "testMatch": [
      "**/tests/**/*.test.js",
      "**/tests/**/*.spec.js"
    ],
    "setupFilesAfterEnv": [
      "<rootDir>/tests/setup.js"
    ]
  }
}
